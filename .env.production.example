# OptiCrew - Production Environment Configuration
# Copy this file to .env for production deployment
# Generate APP_KEY with: php artisan key:generate

# Application Configuration
APP_NAME=OptiCrew
APP_ENV=production
APP_KEY=base64:YOUR_GENERATED_APP_KEY_HERE
APP_DEBUG=false
APP_URL=https://yourdomain.com

# Logging
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=opticrew_production
DB_USERNAME=opticrew_user
DB_PASSWORD=YOUR_SECURE_DATABASE_PASSWORD

# Cache & Session Configuration (Use Redis for production)
BROADCAST_DRIVER=redis
CACHE_DRIVER=redis
FILESYSTEM_DISK=local
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_SECURE_COOKIE=true

# Redis Configuration
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail Configuration (Configure with your mail service)
MAIL_MAILER=smtp
MAIL_HOST=smtp.yourmailservice.com
MAIL_PORT=587
MAIL_USERNAME=your_email@yourdomain.com
MAIL_PASSWORD=YOUR_MAIL_PASSWORD
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="no-reply@yourdomain.com"
MAIL_FROM_NAME="${APP_NAME}"

# AWS Configuration (Optional - if using S3 for file storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Pusher Configuration (Optional - if using real-time features)
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

# Genetic Algorithm Configuration
GA_POPULATION_SIZE=20
GA_MAX_GENERATIONS=100
GA_MUTATION_RATE=0.1
GA_TOURNAMENT_SIZE=5
GA_PATIENCE=15

# Workforce Configuration
WORKFORCE_AVAILABLE_HOURS=8.0
WORKFORCE_UTILIZATION_RATE=0.85
WORKFORCE_HOURLY_WAGE=13.0
WORKFORCE_BENEFITS_COST=5.0
WORKFORCE_CLEANING_SPEED=10.0
WORKFORCE_TRAVEL_TIME=0.5
WORKFORCE_BUDGET_LIMIT=null

# Work Schedule Constraints
WORK_START_TIME=08:00:00
WORK_END_TIME=18:00:00

# Alert Configuration
ALERT_ON_HOLD_THRESHOLD=30
ALERT_DURATION_THRESHOLD=20

# Pricing Configuration
MAX_EXTRA_TASK_PRICE=10000

# Security Configuration
# IMPORTANT: Update CORS allowed origins in config/cors.php for production
# Add your production domain to the allowed_origins array
# IMPORTANT: Ensure your web server (Apache/Nginx) is configured with SSL/TLS certificate
# Session encryption is enabled by default in config/session.php
# Cookies will only be sent over HTTPS when SESSION_SECURE_COOKIE=true

# Sanctum Configuration
SANCTUM_STATEFUL_DOMAINS=yourdomain.com
SESSION_DOMAIN=.yourdomain.com
